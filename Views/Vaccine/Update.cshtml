@model VaccineWebApp.Models.VaccineModel

<head>
    <link rel="stylesheet" href="~/css/VaccineHome.css" asp-append-version="true" />
</head>

<form method="post" asp-action="Update">
    <input asp-for="VaccineID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Vaccine</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name">Vaccine Name: </label>
                        <input asp-for="Name" class="form-control" />
                    </div>
               
                <div class="col-4">
                    <label asp-for="DosesNeeded">DosesNeeded: </label>
                    <input asp-for="DosesNeeded" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="Quantity">Quantity:</label>
                    <input asp-for="Quantity" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="LowQuantity">Low Quantity:</label>
                    <input asp-for="LowQuantity" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="TypeName">Vaccine Type:</label>
                    <input asp-for="TypeName" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="MedAidNo">Medical Aid Accepted:</label>
                    <input asp-for="MedAidNo" class="form-control" />
                </div>
                <div class="col-4">
                    <label asp-for="Price">Vaccine Price:</label>
                    <input asp-for="Price" class="form-control" />
                </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Update" />
                    </div>
                    <div class="col">
                        <a asp-action="HomeVaccine" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
