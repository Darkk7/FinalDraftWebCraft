@model VaccineWebApp.Models.VaccineTypeModel

<head>
    <link rel="stylesheet" href="~/css/VaccineHome.css" asp-append-version="true" />
</head>

<form method="post" asp-action="Update">
    <input asp-for="TypeID" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update Vaccine Type</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TypeName">Vaccine Type Name: </label>
                        <input asp-for="TypeName" class="form-control" />
                    </div>

                    <div class="col-4">
                    <label asp-for="Description">Description: </label>
                    <input asp-for="Description" class="form-control" />
                    </div>
                </div>
             
            </div>
            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="Update" />
                    </div>
                    <div class="col">
                        <a asp-action="HomeVaccineType" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>
