@model VaccineWebApp.Models.VaccineTypeModel

<head>
    <link rel="stylesheet" href="~/css/VaccineHome.css" asp-append-version="true" />
</head>

<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" asp-action="Create" style="max-width: 500px">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h2 class="mb-4 text-center">Add New Vaccine Type</h2>
                    <hr />
                    <div class="mb-3">
                        <label asp-for="TypeName" class="form-label">Vaccine Type Name:</label>
                        <input asp-for="TypeName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description:</label>
                        <input asp-for="Description" class="form-control" required />
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-info">Add</button>
                        <a asp-action="HomeVaccineType" class="btn btn-danger">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
